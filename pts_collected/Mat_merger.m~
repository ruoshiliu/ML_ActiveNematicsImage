d=dir('/Users/ruoshiliu/Desktop/OneDrive/Github/ML_ActiveNematicsImage/pts_collected/*.mat');
nframes = 13000;
pos(nframes).cdata = [];
neg(nframes).cdata = [];
for i = 1:length(d)
    load(d(i).name);
    for j = 1:nframes
        if ~isempty(pts_neg(j).cdata)
            neg(j).cdata = pts_neg(j).cdata;
        end
        if ~isempty(pts_pos(j).cdata)
            pos(j).cdata = pts_pos(j).cdata;
        end
    end
    clear pts_neg pts_pos k;
end
filename = num2str(k) + ".mat";
name = '/Users/ruoshiliu/Desktop/OneDrive/Github/ML_ActiveNematicsImage/pts_collected/*.mat' + filename;
save(name,'pts_pos','pts_neg','k');